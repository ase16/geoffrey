extends ../layout.jade

block content
	.customContainer
		if status
			.mdl-grid
				.mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet
					.mdl-card.mdl-shadow--2dp
						.mdl-card__title
							h2.mdl-card__title-text Login
						.mdl-card__supporting-text Please login to get analytics data
		if formErrors
			each error in formErrors
				.mdl-grid
					.mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet
						.mdl-card.mdl-shadow--2dp
							.mdl-card__title
								h2.mdl-card__title-text Error
							.mdl-card__supporting-text #{error.error}
		.mdl-grid
			.mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet
				.login-card.mdl-card.mdl-shadow--2dp
					.mdl-card__title
						h2.mdl-card__title-text Login
					.mdl-card__supporting-text Please login to get analytics data
		.mdl-grid
			.mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet
				form(method='post',role='form')
					input(name='_csrf', type='hidden', value=csrfToken)
					.mdl-grid
						.mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
							input#login.mdl-textfield__input(type='email', name='login')
							label.mdl-textfield__label(for='login') Email
					.mdl-grid
						.mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
							input#password.mdl-textfield__input(type='password', name='password')
							label.mdl-textfield__label(for='password') Password
					.mdl-grid
						.mdl-cell.mdl-cell--12-col.mdl-cell--8-col-tablet
							button.mdl-button.mdl-js-button.mdl-button--raised.mdl-button--colored(type='submit', name='submit') Submit
